.drip-form--colorpicker
	display flex

.colorpicker--show
	margin-right 5px
	padding 1px
	width 18px
	height 32px
	border 1px solid #ccc
	cursor pointer

	&--disabled
		cursor unset

.colorpicker--container
	background #fff

	.flexbox-fix
		input
			color #000

	.ant-tooltip-content
		background #fff

		.ant-tooltip-inner
			padding unset
			background #fff

	.ant-tooltip-arrow
		&:before
			background #fff
