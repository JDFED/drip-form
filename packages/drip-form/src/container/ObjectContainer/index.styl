.object-container
	.field-container
		display flex
		align-items center
		justify-content left
		margin 10px 0 10px 15px
		
	&__title
		&--common
			margin-bottom 20px
			font-size 14px

		&--collapse
			margin-bottom unset

	.title
		&-left
			flex-direction row

		&-top
			flex-direction column

		&-bottom
			flex-direction column-reverse

		&-right
			flex-direction row-reverse