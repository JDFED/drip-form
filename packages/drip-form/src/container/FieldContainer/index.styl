common()
	font-size 12px
	line-height 20px

.field-container
	align-items center
	font-size 12px
	justify-content left

	&__form
		display flex

		&>div:last-child
			position relative
			display flex
			flex 1
			align-items center
			width 100%

		&.title
			&-top
				flex-direction column

				.field-container__title
					width 100%

			&-bottom
				flex-direction column-reverse

				.field-container__title
					width 100%

			&-right
				flex-direction row-reverse

				.field-container__title
					width 82px
					text-align right

	&__other
		line-height 20px

	&__tips
		common()
		color #999

	&__error
		common()
		min-height 20px
		color #ff0000

		&--no-title
			padding-left 0

	&__title
		display flex
		flex-shrink 0
		align-items center
		width 82px
		text-align left
		word-break break-all

		&-question
			margin-left 5px
			cursor pointer

	&__babel-question
		color #08ce96
		font-size 14px !important

.field__sure
	&--container
		display flex
		flex 1
		align-items center

	&--button
		margin-left 10px
		width 40px
		height 32px
		border 1px #eee solid
		text-align center
		line-height 32px
		cursor pointer
		user-select none

		&-disabled
			background #eee
			color #999
			cursor not-allowed
